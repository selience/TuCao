<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_popup"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_popup_up_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_up"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/string_homepage_popup_item_up_text"
        android:textColor="@color/color_dark_gray"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="10dp"
        android:background="#d8d8d8" />

    <TextView
        android:id="@+id/id_popup_down_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_down"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/string_homepage_popup_item_down_text"
        android:textColor="@color/color_dark_gray"
        android:textSize="14sp" />
</LinearLayout>